<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.note.NoteFormActivity">


    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_note" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Note"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/edit_text_money" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_note" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Uang"/>
    <Button
            android:text="Pemasukan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_pemasukan"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_money" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"/>
    <Button
            android:text="Pengeluaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_pengeluaran" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_money" android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>